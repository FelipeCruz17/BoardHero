<!DOCTYPE html>
<html lang="en">
<head>
    <!-- General Settings and Fonts -->
    <%- include('./partials/head-general-settings') %>    
    <!-- CSS Links -->
    <%- include('./partials/bootstrap-css-head') %>    
    <link rel="stylesheet" href="/stylesheets/create-task.css" />
    <title>Create New Task | Board Hero</title>
</head>

<body>
    <div class="global">
        <%- include('./partials/sidebar') %>
    
        <div class="home-section">
            <!-- %- include('./partials/navbar') %> -->
        
            <main>
                <div class="background-effect"></div>
                <section class="container-create-task">
                    <div class="dialog-heading">
                        <h2>Create task</h2>
                    </div>
        
                    <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-content">
                        <div class="form-columns">
                            <div class="form-details">
                                <label for="task_name">Task name</label>
                                <input type="text" id="task_name" name="task_name" required/>
                    
                                <label for="participants">Participants</label>
                                <input type="text" id="participants" name="participants" required/>
                    
                                <label for="tags">Tags</label>
                                <input type="text" id="tags" name="tags"/>
                    
                                <div class="task-dates">
                                    <label for="start_date">Start date</label>
                                    <input type="date" id="start_date" name="start_date"/>
                                    
                                    <label for="end_date">Due date</label>
                                    <input type="checkbox" name="enable_end_date" id="enable_end_date">
                                    <input type="date" id="end_date" name="end_date" disabled/>
                                </div>
                            </div>
                            <div class="form-flags">
                                <label>Actions:</label>
                                <div class="options">
                                    <div class="flag">
                                        <input type="checkbox" name="flag_need_to_do" id="option-need-to-do">
                                        <label for="option-need-to-do">Need to do</label>
                                    </div>
                                    <div class="flag">
                                        <input type="checkbox" name="flag_pending_tests" id="option-pending-tests">
                                        <label for="option-pending-tests">Pending tests</label>
                                    </div>
                                    <div class="flag">
                                        <input type="checkbox" name="flag_pending_approval" id="option-pending-approval">
                                        <label for="option-pending-approval">Pending approval</label>
                                    </div>
                                    <div class="flag">
                                        <input type="checkbox" name="flag_approved" id="option-approved">
                                        <label for="option-approved">Approved</label>
                                    </div>
                                </div>
                            </div>
                        </div>
        
                        <label for="description">Description</label>
                        <textarea name="description" id="description" cols="30" rows="10"></textarea>
        
                        <div class="attachments">
                            <label for="files">Attachments</label>
                            <div class="upload-files">
                                <input type="file" name="task_files" id="files" multiple/>
                            </div>
                        </div>
                    </div>
                    <div class="form-footer">
                        <button type="submit" id="submit">Create</button>
                        <a href="/dashboard">Cancel</a>
                    </div>
                    </form>
                </section>
          </main>
        </div>
    </div>

    <%- include('./partials/bootstrap-js-scripts') %>

    <script src="/javascripts/create-task.js"></script>

</body>
</html>